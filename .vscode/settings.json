// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,

    "src/app/bin/**": true,
    "src/app/obj/**": true,
    "src/app/project.lock.json": true,
    "src/rules/bin/**": true,
    "src/rules/obj/**": true,
    "src/rules/project.lock.json": true,
    "test/app.tests/bin/**": true,
    "test/app.tests/obj/**": true,
    "test/app.tests/project.lock.json": true,
    "test/rules.tests/bin/**": true,
    "test/rules.tests/obj/**": true,
    "test/rules.tests/project.lock.json": true,
    "ui/src/jspm_packages/**": true,
    "ui/src/**/*.js": { "when": "$(basename).ts"},
    "ui/src/**/*.js.map": true,
    "ui/src/app/appsettings.js": true,
    "ui/test/**/*.js": { "when": "$(basename).ts"},
    "ui/test/**/*.js.map": true,
    "ui/wwwroot/**": true,
    "ui/node_modules/**": true,
    "ui/typings/**": true,
    "ui/project.lock.json": true,
    ".vscode/**": true,
    "node_modules/**": true,
    "reports/**": true,
    "artifacts/**": true
  },
  "stylelint.config": {
    "extends": "./ui/stylelint.config.js" 
  }
}
