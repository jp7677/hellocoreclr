// Place your settings in this file to overwrite default and user settings.
{
  "typescript.tsdk": "./ui/node_modules/typescript/lib",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,

    "src/HelloCoreClrApp/bin/**": true,
    "src/HelloCoreClrApp/obj/**": true,
    "src/HelloCoreClrApp.Rules/bin/**": true,
    "src/HelloCoreClrApp.Rules/obj/**": true,
    "test/HelloCoreClrApp.Test/bin/**": true,
    "test/HelloCoreClrApp.Test/obj/**": true,
    "ui/bin/**": true,
    "ui/obj/**": true,
    "ui/wwwroot/**": true,
    "ui/node_modules/**": true,
    ".vscode/**": true,
    ".idea/**": true,
    ".vs/**": true,
    "**/*.sln*": true,
    "node_modules/**": true,
    "**/npm-debug.log": true
  },
  "eslint.workingDirectories": [ "./ui" ],
  "stylelint.config": {
    "extends": "./ui/.stylelintrc",
    "ignoreFiles": ["**/*.?(cs|fs)proj", "**/*.md"]
  },
  "cucumberautocomplete.syncfeatures": "ui/test-e2e/*.feature",
  "cucumberautocomplete.strictGherkinCompletion": true,
  "cucumberautocomplete.steps": [
    "ui/test-e2e/**/*.ts"
  ]
}
